<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo del ProgressBar -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#FFF1EE" /> <!-- Color del fondo -->
            <corners android:radius="20dp" /> <!-- Radio de las esquinas para darle un aspecto redondeado -->
        </shape>
    </item>

    <!-- Barra de progreso -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#CB2027" /> <!-- Color de la barra de progreso -->
                <corners android:radius="20dp" /> <!-- Radio de las esquinas para darle un aspecto redondeado -->
            </shape>
        </clip>
    </item>
</layer-list>